{
  "name": "glsl-sandbox",
  "version": "1.0.0",
  "description": "automates GlslViewer multiple buffers pipeline",
  "main": "index.js",
  "license": "MIT",
  "author": "Patricio Gonzalez Vivo <patriciogonzalezvivo@gmail.com>",
  "standard": {
    "globals": [
      "THREE"
    ]
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "budo": "^7.0.2",
    "npm-run-all": "^1.6.0",
    "onchange": "^2.1.2",
    "resolve-lygia": "^1.0.4",
    "standard": "^5.4.1",
    "three": "^0.73.0",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch dev",
    "watch": "onchange 'index.js' '*.glsl' -- npm run transpile",
    "dev": "budo example.js:bundle.js --live",
    "build": "browserify example.js | uglifyjs -cm > bundle.js",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:patriciogonzalezvivo/glsl-sandbox.git"
  },
  "homepage": "https://github.com/patriciogonzalezvivo/glsl-sandbox",
  "bugs": {
    "url": "https://github.com/patriciogonzalezvivo/glsl-sandbox/issues"
  },
  "keywords": [
    "glsl",
    "webgl",
    "threejs",
    "three",
    "buffer",
    "ping",
    "pong",
    "glslViewer"
  ]
}
